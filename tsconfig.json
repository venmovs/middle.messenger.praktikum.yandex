{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "declaration": false,
    "module": "esNext",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  },

  "include": ["./src/**/*"]
}
